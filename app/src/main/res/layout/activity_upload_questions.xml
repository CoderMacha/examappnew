<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTestInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Question"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option A"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option B"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option C"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option D"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCorrectOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:entries="@array/correct_option_array" />

        <Button
            android:id="@+id/btnAddQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Question" />
    </LinearLayout>
</ScrollView>
