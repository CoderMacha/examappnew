<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainTestActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Details"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/testDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Duration (minutes)"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTestDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter duration in minutes"
        android:inputType="number"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/testDurationLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/questionsCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Questions"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTestDuration"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editQuestionsCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter number of questions"
        android:inputType="number"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/questionsCountLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/totalMarksLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Marks"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editQuestionsCount"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTotalMarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter total marks"
        android:inputType="number"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/totalMarksLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/correctAnswerMarksLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marks per Correct Answer"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTotalMarks"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editCorrectAnswerMarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter marks per correct answer"
        android:inputType="number"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/correctAnswerMarksLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/wrongAnswerMarksLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marks Deducted for Wrong Answer"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editCorrectAnswerMarks"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editWrongAnswerMarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter marks deducted for wrong answer"
        android:inputType="number"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/wrongAnswerMarksLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btnStartTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Start Test"
        android:background="@color/teal_200"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/editWrongAnswerMarks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
